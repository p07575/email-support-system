# Email Support System - Environment Configuration
# Copy this file to .env and fill in your values

# ============ Email Server Settings ============
EMAIL_SMTP_SERVER=smtp.example.com
EMAIL_SMTP_PORT=587
EMAIL_USERNAME=support@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_IMAP_SERVER=imap.example.com
EMAIL_IMAP_PORT=993
EMAIL_CHECK_INTERVAL=60

# ============ Telegram Settings ============
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ============ OpenRouter Settings ============
# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key

# Free models for classification (with structured output)
# Options: google/gemma-3-4b-it:free, meta-llama/llama-3.2-1b-instruct:free
OPENROUTER_CLASSIFIER_MODEL=google/gemma-3-4b-it:free

# Model for response generation
# Options: google/gemma-3-4b-it:free, meta-llama/llama-3.2-3b-instruct:free
OPENROUTER_RESPONSE_MODEL=google/gemma-3-4b-it:free

# ============ Ollama Settings (Fallback) ============
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=deepseek-r1:8b

# ============ RAG Settings ============
# Directory containing knowledge base documents
# RAG_KNOWLEDGE_DIR=./knowledge_base
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50

# ============ Auto Features ============
# Enable AI auto-draft responses
AUTO_REPLY_ENABLED=true
# Enable auto-filtering of spam/promotions
AUTO_FILTER_ENABLED=true

# ============ MySQL Settings ============
DB_HOST=localhost
DB_PORT=3306
DB_USER=email_support
DB_PASSWORD=your_db_password
DB_NAME=email_support
